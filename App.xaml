<Application x:Class="esp32_utilities_companion.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:esp32_utilities_companion"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Name="GlobalButtonStyle">
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="Background" Value="DarkGray"></Setter>
        </Style>
        <Style TargetType="ListBox" x:Name="GlobalListBoxStyle">
            <Setter Property="Background" Value="#2F2F2F"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>
        <Style TargetType="ListBoxItem" x:Name="GlobalListBoxItemStyle">
            <Setter Property="Foreground" Value="LightGray"></Setter>
        </Style>
        <Style TargetType="CheckBox" x:Name="GlobalCheckBoxStyle">
            <Setter Property="Foreground" Value="LightGray"></Setter>
        </Style>
    </Application.Resources>
</Application>
